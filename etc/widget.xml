<?xml version="1.0" encoding="UTF-8"?>
<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:/etc/widget.xsd">
	<widget 
		id="category_product_slider" 
		class="Atopt\Slider\Block\Catalog\Product\ProductSlider"
		is_email_compatible="false"
		placeholder_image="Magento_Widget::placeholder.gif">
		<label translate="true">Atopt Category Products Slider</label>
		<description translate="true">List of Products for a given category in a slider widget</description>
		<parameters>
			<parameter name="title" xsi:type="text" required="true" visible="true">
				<label translate="true">Title (frontend)</label>
			</parameter>
			<parameter name="category_id" xsi:type="block" required="true" visible="true">
				<label translate="true">Category</label>
				<block class="Magento\Catalog\Block\Adminhtml\Category\Widget\Chooser">
					<data>
						<item name="button" xsi:type="array">
							<item name="open" xsi:type="string">Select Category.</item>
						</item>
					</data>
				</block>
			</parameter>
			<parameter name="template" xsi:type="select" required="true" visible="true">
				<label translate="true">Template</label>
				<options>
					<option name="default" value="product/slider/list.phtml" selected="true">
						<label translate="true">Product list slider</label>
					</option>
					<option name="teaser" value="product/slider/teaser.phtml">
						<label translate="true">Product teaser slider</label>
					</option>
				</options>
			</parameter>
		</parameters>
	</widget>
	<widget 
		id="atopt_bannerslider" 
		class="Atopt\Slider\Block\Widget\Sliders"
		is_email_compatible="false"
		placeholder_image="Magento_Widget::placeholder.gif">
		<label translate="true">Atopt Banner Slider Widget</label>
		<description translate="true">Banner Slider Widget</description>
		<parameters>
			<parameter name="title" xsi:type="text" visible="true" sort_order="0">
				<label translate="true">Title</label>
			</parameter>
			<parameter name="addition_class" xsi:type="text" visible="true" sort_order="20">
				<label translate="true">Addition Class</label>
			</parameter>
			<parameter name="owlsettings_heading" xsi:type="conditions" visible="true" sort_order="30" class="Atopt\Slider\Block\Adminhtml\System\Config\Form\Field\Heading">
				<label translate="true">OWL Carousel Settings</label>
			</parameter>
			<parameter name="animatein" xsi:type="select"  visible="true" sort_order="40" source_model="Atopt\Slider\Model\Config\Source\AnimateCssIn">
				<label translate="true">animateIn</label>
			</parameter>
			<parameter name="animateout" xsi:type="select"  visible="true" sort_order="50" source_model="Atopt\Slider\Model\Config\Source\AnimateCssOut">
